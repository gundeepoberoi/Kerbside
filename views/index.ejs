<%- include('partials/header') -%>

    <!-- About Section with Full-page Background Image -->
    <section class="about-section">
        <div class="background-image">
            <!-- Overlay to make text more readable -->
            <div class="overlay"></div>
            <div class="container">
                <div class="about-content">
                    <h1>About Us</h1>
                    <p>Welcome to Kerbside - Your solution for dealing with scrap. Post details about your scrap items and connect with interested people.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Listings Section -->
    <section class="py-5">
        <div class="container">
            <h2 id="listings">Top Listings</h2>
            <div class="row">
                <!-- Example listing boxes -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="listing1.jpg" class="card-img-top" alt="Listing 1">
                        <div class="card-body">
                            <h5 class="card-title">Listing 1</h5>
                            <p class="card-text">Description of Listing 1.</p>
                            <a href="#" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <!-- Repeat this card structure for more listings -->
            </div>
        </div>
    </section>

    <!-- Add Bootstrap and other JavaScript scripts at the end of the body -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<%- include('partials/footer') -%>