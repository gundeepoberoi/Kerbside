<%- include('partials/header') -%>
<div class="container">
<br><br>
    <!-- Image Slider and Text on the Right -->
    <div class="row">
        <div class="col-6">
            <!-- Image Slider Code -->
            <div id="imageSlider" class="carousel slide" data-ride="carousel">
                <!-- Carousel Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#imageSlider" data-slide-to="0" class="active"></li>
                    <li data-target="#imageSlider" data-slide-to="1"></li>
                    <!-- Add more indicators as needed -->
                </ol>
                <!-- Carousel Slides -->
                <div class="carousel-inner">
                    <div class="carousel-item active image-container">
                        <img src="/images/washingMachine.jpg" class="d-block w-100" alt="Image 1" style="object-fit: cover;">
                    </div>
                    <div class="carousel-item image-container">
                        <img src="/images/washingMachine.jpg" class="d-block w-100" alt="Image 2" style="object-fit: cover;">
                    </div>
                    <!-- Add more carousel items with images as needed -->
                </div>
                <!-- Carousel Controls -->
                <a class="carousel-control-prev" href="#imageSlider" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#imageSlider" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-6">
            <!-- Fields -->
            <div class="col-6 mt-2">
                <h1 class="row mt-2 mb-2">Broken Washing Machine</h1>
                <div class="row mt-2"><strong>Dimensions:</strong> 1x1x1m</div>
                <div class="row mt-2"><strong>Weight:</strong> 80kg</div>
                <div class="row mt-2"><strong>Time:</strong> 2023-10-28T21:42:49.000Z</div>
                <div class="row mt-2"><strong>Location:</strong> M13 9HN</div>
            </div>
        </div>
    </div>

    <!-- Listing Information -->
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Broken generic washing machine, reuse for parts</h5>

            <!-- Tags -->
            <div class="mb-3">
                <span class="badge bg-info">Electrical Goods</span>
                <span class="badge bg-info">electronic</span>
                <span class="badge bg-info">electric motors</span>
            </div>

            <!-- Additional Details -->
            <h3>Additional Details</h3>
            <p>User: 2 <br> foffell1@sohu.com</p>
        </div>
    </div>

    <div>
    <div class = "h3-info">Interested?</div>
    <button type="submit" class="btn btn-info" onclick="createConvo()">Message</button>
    </div>
    <!-- Back Button -->
    <a href="/listings" class="btn btn-primary mt-3 mb-3 col-3">Back to Listings</a>

    <a href="/messaging"><button class="QandAButton" data-toggle="tooltip" title="Messages"></button></a>
    
</div>

