<%- include('partials/header') -%>

<div class="container-fluid  col-md-4 m-5">
    <form method="GET">
        <div class="search-bar-listing">
            <input type="text" placeholder="Keyword search" name="searchBar">
            <button type="submit"><img src="Pictures/search.png" alt="Search"></button>
        </div>
        
        <div class="dropdown-wrapper row p-5">
            <div class="form-floating col-md">
                <select class="form-select" id="category" name="category">
                    <option value="">Any</option>
                    <option value="1">Category 1</option>
                    <option value="2">Category 2</option>
                    <option value="3">Category 3</option>
                    <option value="4">Category 4</option>
                    <option value="5">Category 5</option>
                </select>
                <label for="category">Category</label>
            </div>

            <div class="form-floating col-md">
                <select class="form-select" id="Tag" name="Tag">
                    <option value="">No option selected</option>
                </select>
                <label for="Tag">Tags</label>
            </div>
        </div>
    </form>
</div>
<br>

<div class="container container-search">
    <div class="listing-wrapper col-md-4 m-5">
        <!-- Repeat the following section for each listing -->
        <div class="listings container-fluid rounded-4 d-flex" id="listing1">
            <img class="rounded-4" src="images/shopping-cart.png" alt="Image for item"/>
            <div class="p-3">
                <h4 class="nameHead">Listing 1 Title</h4>
                <p>Category: </p>
                <p>Tags: </p>
            </div>
        </div>
        <!-- End of the repeated section -->
    </div>
    
    <div class="listing-desc col-md-8 rounded-4" id="listing-desc">
        <div class="p-5" id="desc-inner" style="margin-top: 2.8rem;">
            <!-- Description content here -->
        </div>
    </div>
</div>