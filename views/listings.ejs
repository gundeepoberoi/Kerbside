                        <select class="form-select" id="Tag" name="Tag">
                            <option value="">No option selected</option>
                            <!-- Add options here -->
                        </select>
                        <label for="Tag">Tags</label>
                    </div>
                </div>

                
                <div class="col-md-2">
                    <div class="form-floating mb-2">
                        <input type="text" class="form-control" placeholder="Dimensions" name="Dimensions">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-floating mb-2">
                        <input type="text" class="form-control" placeholder="Weight" name="Weight">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-floating mb-3">
                        <label for="distancerange" class="form-label">Distance</label>
                        <input type="range" class="form-range" min="1" step="5" max="25" id="distancerange">
                    </div>
                </div>
            </div>
        </div>
