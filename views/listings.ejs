<%- include('partials/header') -%>


<!-- Listings Section -->
<section class="py-5">
    <div class="container-search">
      <center><form method="GET" class="search-bar">
          <input type="text" class="form-control" placeholder="Search for scrap items" name="searchBar">
          <input type="hidden" name="category">
          <button type="submit" class="btn btn-info">Go</button></center>
        
        <div class="dropdown-wrapper row p-5">
            <div class="form-floating col-md">
                <select class="form-select" id="category" name="category">
                    <option value="">Any</option>
                    <option value="1">Category 1</option>
                    <option value="2">Category 2</option>
                    <option value="3">Category 3</option>
                    <option value="4">Category 4</option>
                    <option value="5">Category 5</option>
                </select>
                <label for="category">Category</label>
            </div>

            <div class="form-floating col-md">
                <select class="form-select" id="Tag" name="Tag">
                    <option value="">No option selected</option>
                </select>
                <label for="Tag">Tags</label>
            </div>
            <div class="form-floating col-md">
                <select class="form-select" id="location" name="location">
                    <option value="">Any</option>
                    <option value="1">Within 1km </option>
                    <option value="2">Within 5km</option>
                    <option value="3">Within 10km</option>
                    <option value="4">Within 15km</option>
                    <option value="5">Within 25km</option>
                </select>
                <label for="location">Distance</label>
            </div>
        </div>
      </form>
